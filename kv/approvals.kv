<ApprovalScreen>:
    BoxLayout:
        orientation: "vertical"

        # ===== HEADER =====
        BoxLayout:
            size_hint_y: None
            height: "72dp"
            padding: "20dp"
            spacing: "10dp"

            canvas.before:
                Color:
                    rgba: 0.12, 0.53, 0.9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "⬅"
                size_hint_x: None
                width: "42dp"
                background_color: 0,0,0,0
                color: 1,1,1,1
                font_size: "20sp"
                on_press: root.go_back()

            Label:
                text: "✅ Pending Approvals"
                color: 1,1,1,1
                bold: True
                font_size: "18sp"

        # ===== BODY =====
        ScrollView:
            do_scroll_x: False

            BoxLayout:
                id: list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "20dp"
                spacing: "14dp"

                canvas.before:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
