<RegisterScreen>:
    BoxLayout:
        orientation: "vertical"

        # ===== HEADER =====
        BoxLayout:
            size_hint_y: None
            height: "72dp"
            padding: "20dp"
            spacing: "10dp"

            canvas.before:
                Color:
                    rgba: 0.12, 0.53, 0.9, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "‚¨Ö"
                size_hint_x: None
                width: "42dp"
                background_color: 0,0,0,0
                color: 1,1,1,1
                font_size: "20sp"
                on_press: root.go_back()

            Label:
                text: "‚ûï Student Registration"
                color: 1,1,1,1
                bold: True
                font_size: "18sp"

        # ===== BODY =====
        ScrollView:
            do_scroll_x: False

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "22dp"
                spacing: "14dp"

                canvas.before:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                # ===== CARD =====
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "18dp"
                    spacing: "12dp"

                    canvas.before:
                        Color:
                            rgba: 1,1,1,1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [18]

                    TextInput:
                        id: username
                        hint_text: "üë§ Username *"
                        size_hint_y: None
                        height: "48dp"
                        multiline: False

                    TextInput:
                        id: password
                        hint_text: "üîí Password *"
                        password: True
                        size_hint_y: None
                        height: "48dp"
                        multiline: False

                    TextInput:
                        id: student_id
                        hint_text: "üÜî Student ID / Roll No *"
                        size_hint_y: None
                        height: "48dp"
                        multiline: False

                    TextInput:
                        id: full_name
                        hint_text: "üßë Full Name *"
                        size_hint_y: None
                        height: "48dp"
                        multiline: False

                    Spinner:
                        id: gender
                        text: "Male"
                        values: ["Male", "Female", "Other"]
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: branch
                        hint_text: "üéì Branch / Department"
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: class_section
                        hint_text: "üè´ Class / Section"
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: year
                        hint_text: "üìÜ Year"
                        input_filter: "int"
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: mobile
                        hint_text: "üìû Mobile Number"
                        input_filter: "int"
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: address
                        hint_text: "üè† Address"
                        size_hint_y: None
                        height: "80dp"

                    TextInput:
                        id: parent_name
                        hint_text: "üë™ Parent / Guardian Name"
                        size_hint_y: None
                        height: "48dp"

                    TextInput:
                        id: parent_mobile
                        hint_text: "‚òé Parent Contact Number"
                        input_filter: "int"
                        size_hint_y: None
                        height: "48dp"

                    Button:
                        text: "‚úÖ Register Student"
                        size_hint_y: None
                        height: "52dp"
                        font_size: "16sp"
                        background_color: 0.1, 0.7, 0.3, 1
                        color: 1,1,1,1
                        on_press: root.register_student(username.text, password.text, student_id.text, full_name.text, gender.text, branch.text, class_section.text, year.text, mobile.text, address.text, parent_name.text, parent_mobile.text)

                    Label:
                        id: msg
                        text: ""
                        color: 0, 0.6, 0, 1
                        size_hint_y: None
                        height: "28dp"
